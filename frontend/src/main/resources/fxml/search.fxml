<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane prefHeight="100.0" fx:controller="ch.supsi.pss.controller.Search" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <HBox alignment="CENTER" prefHeight="124.0" prefWidth="455.0" spacing="10.0" BorderPane.alignment="CENTER">
            <Label text="%search.insert" styleClass="h3Bold"/>
            <TextField prefHeight="30" prefWidth="150" promptText="%tag.name.prompt.text" fx:id="searchInput"/>
            <Button text="%search" onAction="#search" defaultButton="true"
                    styleClass="defaultButton, defaultFontBold"/>
        </HBox>
    </center>
    <top>
        <Label alignment="CENTER" styleClass="h2Bold" prefHeight="30.0" prefWidth="150.0" text="%search.title" BorderPane.alignment="CENTER" />
    </top>
</BorderPane>
