<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="250.0" fx:controller="ch.supsi.pss.controller.About" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <HBox styleClass="whiteBackground" BorderPane.alignment="CENTER" alignment="CENTER">
        <VBox alignment="CENTER" minWidth="200" maxWidth="400" BorderPane.alignment="CENTER">
            <HBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </HBox.margin>
        <Label fx:id="h2Version" minWidth="200" maxWidth="400" alignment="BASELINE_LEFT" styleClass="h2Bold"
               text="%application.name"/>
        <Label text="%application.build" fx:id="build" minWidth="300" maxWidth="400" alignment="BASELINE_LEFT"/>
        <Label styleClass="h2Bold" minWidth="200" maxWidth="400" alignment="BASELINE_LEFT" text="%about.developers"/>
        <Label styleClass="h3Bold" minWidth="200" maxWidth="400" alignment="BASELINE_LEFT" text="%developers.info.mohamed.boutaleb"/>
        <Label styleClass="h3Bold" minWidth="200" maxWidth="400" alignment="BASELINE_LEFT" text="%developers.info.michel.rosselli"/>
        <Label styleClass="h3Bold" minWidth="200" maxWidth="400" alignment="BASELINE_LEFT" text="%developers.info.nicolas.gregori"/>
        </VBox>
        </HBox>
    </center>
    <top>
        <HBox alignment="CENTER" prefHeight="100.0"
              BorderPane.alignment="CENTER_LEFT">
            <ImageView fitHeight="124.0" fitWidth="141.0" pickOnBounds="true" preserveRatio="true">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <Image url="@../img/img_about_sketch_appv.1.1.png"/>
            </ImageView>
            <Label text="%application.name.abbreviation" styleClass="h1Bold" fx:id="h1Version">
            </Label>
        </HBox>
    </top>
    <bottom>
        <HBox alignment="CENTER" prefHeight="50" BorderPane.alignment="CENTER">
            <Label text="Copyright Â© 2020" styleClass="h3"/>
        </HBox>
    </bottom>
</BorderPane>
