<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" BorderPane.alignment="CENTER">
    <center>
        <FlowPane styleClass="canvasPropertyPane"  fx:id="canvasPane" alignment="CENTER">
        <Canvas styleClass="canvasProperty" fx:id="canvas" />
        </FlowPane>
    </center>
    <top>
        <ToolBar>
        <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <Button text="%newsketch.save" styleClass="defaultButton, buttonImage" fx:id="save" >
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@../img/icons/save.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets left="5.0" bottom="5.0" top="5.0" right="5.0"/>
                </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" styleClass="defaultButton, buttonImage" text="%newsketch.draw" fx:id="draw">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@../img/icons/pencil.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets left="5.0" bottom="5.0" top="5.0" right="5.0"/>
                </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" styleClass="defaultButton, buttonImage" text="%newsketch.erase" fx:id="erase">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20" styleClass="buttonImage">
                        <Image url="@../img/icons/erase.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets left="5.0" bottom="5.0" top="5.0" right="5.0"/>
                </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" styleClass="defaultButton, buttonImage" text="%newsketch.eraseAll" fx:id="eraseAll">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20" styleClass="buttonImage">
                        <Image url="@../img/icons/eraseAll.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets left="5.0" bottom="5.0" top="5.0" right="5.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        </ToolBar>
    </top>
</BorderPane>
